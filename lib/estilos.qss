 * QGroupBox
 *
 ******/
QGroupBox {
  border: 1px solid gray; /* Borde gris de un píxel de ancho */
  border-radius: 5px;     /* Esquinas redondeadas */
  margin-top: 0.5em;
}

/* Título sobre el borde en la esquina superior izquierda */
QGroupBox::title {
  subcontrol-origin: margin;
  left: 10px;
  padding: 0 3px 0 3px;
}
